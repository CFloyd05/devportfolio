---
import { siteConfig } from "../config";

const resumeUrl = siteConfig.resumeUrl ?? "/ConnorFloyd_Resume.pdf";
---

<section id="resume" class="p-6 sm:p-8 md:p-10 lg:p-12">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      {/* Left side — section title */}
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Resume
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background: ${siteConfig.accentColor}`}
        />
      </div>

      {/* Right side — single resume card */}
      <div class="lg:col-span-8">
        <a
          href={resumeUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative flex items-center justify-between bg-gray-50 hover:bg-white rounded-xl sm:rounded-2xl shadow hover:shadow-xl border border-gray-200 p-4 sm:p-6 md:p-8 transition-all duration-300 hover:-translate-y-0.5 hover:border-gray-300"
        >
          <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
            View Resume
          </h3>

          <div class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 rounded-full bg-gray-900 text-white flex items-center justify-center shadow-sm transition-all duration-300 group-hover:bg-gray-700">
            <svg
              class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 17L17 7M17 7H7M17 7V17"
              />
            </svg>
          </div>
        </a>

      </div>
    </div>
  </div>
</section>
